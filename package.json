{
  "name": "@sourcegraph/codemod",
  "description": "A collection of codemods powered by TS-Morph and PostCSS",
  "version": "0.0.0-DEVELOPMENT",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sourcegraph/codemod.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/cli.js",
  "types": "dist/cli.d.ts",
  "scripts": {
    "transform": "ts-node-transpile-only ./src/cli.ts",
    "test": "jest",
    "semantic-release": "semantic-release",
    "prettier": "prettier '**/*.{js?(on),ts?(x),scss,md,yml}' --write --list-different",
    "prettier-check": "npm run prettier -- --write=false",
    "eslint": "eslint './src/**/*.ts?(x)'",
    "build": "tsc -p .",
    "watch": "tsc -p . -w"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "camelcase": "^6.2.0",
    "css-modules-loader-core": "^1.1.0",
    "lodash": "^4.17.21",
    "postcss": "^8.3.6",
    "postcss-nested": "^5.0.5",
    "postcss-scss": "^4.0.0",
    "postcss-selector-parser": "^6.0.6",
    "ts-morph": "^11.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@sourcegraph/eslint-config": "^0.25.1",
    "@sourcegraph/prettierrc": "^3.0.3",
    "@sourcegraph/tsconfig": "^4.0.1",
    "@types/css-modules-loader-core": "1.1.0",
    "@types/jest": "26.0.24",
    "@types/node": "16.4.1",
    "eslint": "^7.31.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "semantic-release": "^17.4.4"
  }
}
