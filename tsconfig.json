{
  "extends": "@sourcegraph/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["./src/**/*"],
  "exclude": ["./**/fixtures"],
}
